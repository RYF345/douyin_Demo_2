<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_comment_panel">

    <!-- 顶部拖拽指示器和标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="12dp">

        <!-- 拖拽条 -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_drag_handle" />

        <!-- 标题栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tv_comment_count_comment_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0条评论"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close_comment_sheet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#888888" />

        </RelativeLayout>

    </LinearLayout>

    <!-- 评论列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_comment_list_comment_sheet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp" />

    <!-- 加载更多指示器 -->
    <ProgressBar
        android:id="@+id/progress_loading_comment_sheet"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="8dp"
        android:visibility="gone" />

    <!-- 底部评论输入框 -->
    <LinearLayout
        android:id="@+id/layout_input_comment_sheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1A1A1A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <EditText
            android:id="@+id/edit_comment_comment_sheet"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_comment_input"
            android:hint="善语结善缘，恶语伤人心"
            android:paddingHorizontal="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:textSize="14sp"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tv_send_comment_comment_sheet"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:text="发送"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="#FF4081" />

    </LinearLayout>

</LinearLayout>

