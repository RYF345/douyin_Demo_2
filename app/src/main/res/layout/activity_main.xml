<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <!--Fragment容器-->
    <FrameLayout
        android:id="@+id/fl_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/ll_btn_nav_main"/>

    <!--底部导航栏-->
    <LinearLayout
        android:id="@+id/ll_btn_nav_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--首页-->
        <TextView
            android:id="@+id/tv_home_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="首页"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:textStyle="bold"/>

        <!--朋友-->
        <TextView
            android:id="@+id/tv_friends_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="朋友"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_add_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add"/>


        <!--消息-->
        <TextView
            android:id="@+id/tv_message_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消息"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:textStyle="bold"/>

        <!--我-->
        <TextView
            android:id="@+id/tv_me_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>